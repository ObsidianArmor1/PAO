        { num: "53", let: "EC", sent: "Emilia clarke burns the lannisters" },
        { num: "54", let: "ED", sent: "Ellen Degeneres bullies employees" },
        { num: "55", let: "EE", sent: "Electrical Engineer fixes computers" },
        { num: "56", let: "ES", sent: "Edward Snowden leaks government secrets" },
        { num: "57", let: "EG", sent: "egg hatches into chicken" },
        { num: "58", let: "EH", sent: "Evander holyfield knocks out boxer" },
        { num: "59", let: "EN", sent: "Elyn Nordegren gets cheated on by tiger woods" },
        { num: "60", let: "SO", sent: "Significant Other proposes on one knee" },
        { num: "61", let: "SA", sent: "Stephen A. Smith yaps on sportscenter" },
        { num: "62", let: "SB", sent: "Sergey Brin codes google" },
        { num: "63", let: "SC", sent: "Santa Claus gifts christmas gifts" },
        { num: "64", let: "SD", sent: "Snoop dogg smokes weed" },
        { num: "65", let: "SE", sent: "Sean Evans eats hot wings" },
        { num: "66", let: "SS", sent: "Steven Spielberg directs ET" },
        { num: "67", let: "SG", sent: "Sasha Grey sucks dick" },
        { num: "68", let: "SH", sent: "Sherlock Holmes deduces mystery" },
        { num: "69", let: "SN", sent: "Sonic collects coins" }
    ];

    // Initialize progress tracking: Each item needs 2 consecutive correct answers
    // Map format: { "00": 0, "01": 0 ... } where value is current streak
    let progressMap = {};
    RAW_DATA.forEach(item => {
        progressMap[item.num] = 0;
    });

    let currentItem = null;

    function playWrongSound() {
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = audioCtx.createOscillator();
        const gain = audioCtx.createGain();
        osc.type = 'sawtooth';
        osc.frequency.setValueAtTime(150, audioCtx.currentTime); 
        osc.frequency.exponentialRampToValueAtTime(40, audioCtx.currentTime + 0.3);
        gain.gain.setValueAtTime(0.2, audioCtx.currentTime);
        gain.gain.linearRampToValueAtTime(0, audioCtx.currentTime + 0.3);
        osc.connect(gain);
        gain.connect(audioCtx.destination);
        osc.start();
        osc.stop(audioCtx.currentTime + 0.3);
    }

    function playCorrectSound() {
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = audioCtx.createOscillator();
        const gain = audioCtx.createGain();
        osc.type = 'sine';
        osc.frequency.setValueAtTime(600, audioCtx.currentTime); 
        osc.frequency.exponentialRampToValueAtTime(1200, audioCtx.currentTime + 0.1);
        gain.gain.setValueAtTime(0.1, audioCtx.currentTime);
        gain.gain.linearRampToValueAtTime(0, audioCtx.currentTime + 0.1);
        osc.connect(gain);
        gain.connect(audioCtx.destination);
        osc.start();
        osc.stop(audioCtx.currentTime + 0.1);
    }

    // Helper to normalize strings for comparison (removes punctuation, ignores case)
    function normalize(str) {
        return str.toLowerCase().replace(/[^a-z0-9]/g, "");
    }

    function getActivePool() {
        // Returns items that haven't reached streak of 2 yet
        return RAW_DATA.filter(item => progressMap[item.num] < 2);
    }

    function pickRandom() {
        const pool = getActivePool();
        document.getElementById('count-remaining').textContent = pool.length;

        if (pool.length === 0) {
            document.getElementById('game-view').classList.add('hidden');
            document.getElementById('win-view').classList.remove('hidden');
            return;
        }

        const randomIndex = Math.floor(Math.random() * pool.length);
        currentItem = pool[randomIndex];

        // Update UI
        document.getElementById('prompt-number').textContent = currentItem.num;
        document.getElementById('current-streak').textContent = progressMap[currentItem.num] + " / 2";
        
        // Clear Inputs
        document.getElementById('input-letters').value = "";
        document.getElementById('input-sentence').value = "";
        document.getElementById('input-letters').focus();
        
        // Hide feedback
        const fb = document.getElementById('feedback-area');
        fb.style.display = 'none';
        fb.className = 'feedback';
        document.getElementById('next-btn').classList.add('hidden');
    }

    function checkAnswer() {
        const userLet = normalize(document.getElementById('input-letters').value);
        const userSent = normalize(document.getElementById('input-sentence').value);
        
        const correctLet = normalize(currentItem.let);
        const correctSent = normalize(currentItem.sent);

        const fb = document.getElementById('feedback-area');
        fb.style.display = 'block';

        if (userLet === correctLet && userSent === correctSent) {
            // Correct
            playCorrectSound();
            progressMap[currentItem.num]++;
            
            fb.className = 'feedback correct';
            
            if (progressMap[currentItem.num] >= 2) {
                fb.innerHTML = `CORRECT! '${currentItem.num}' is mastered and removed from pool.`;
            } else {
                fb.innerHTML = `CORRECT! streak: ${progressMap[currentItem.num]}/2`;
            }

            // Auto advance after short delay
            setTimeout(pickRandom, 1200);

        } else {
            // Wrong
            playWrongSound();
            progressMap[currentItem.num] = 0; // Reset streak
            
            fb.className = 'feedback wrong';
            fb.innerHTML = `INCORRECT.<br>
            <div class="answer-reveal">
                LETTERS: ${currentItem.let}<br>
                SENTENCE: ${currentItem.sent}
            </div>`;
            
            // Show Next Button so they have time to read the correct answer
            document.getElementById('next-btn').classList.remove('hidden');
            document.getElementById('current-streak').textContent = "0 / 2";
        }
    }

    function nextCard() {
        pickRandom();
    }

    // Support Enter Key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
            const nextBtn = document.getElementById('next-btn');
            if (!nextBtn.classList.contains('hidden')) {
                nextCard();
            } else {
                checkAnswer();
            }
        }
    });

    // Start
    pickRandom();

</script>
</body>
</html>
