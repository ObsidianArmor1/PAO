        <div class="input-group">
            <label>SENTENCE (Person Action Object)</label>
            <input type="text" id="input-sentence" placeholder="e.g. Ozzy Osbourne screams heavy metal" autocomplete="off">
        </div>

        <button class="btn-submit" onclick="checkAnswer()">SUBMIT</button>

        <div id="feedback-area" class="feedback"></div>
        <button id="next-btn" class="btn-submit hidden" style="background: var(--steel-blue); margin-top: 15px; color: white;" onclick="nextCard()">NEXT CARD</button>
    </div>

    <div id="win-view" class="hidden">
        <h1 style="color: var(--gold)">ALL DONE!</h1>
        <p>You have mastered the list.</p>
        <button class="btn-submit" onclick="location.reload()">RESTART</button>
    </div>
</div>

<script>
    // DATA PARSING
    // I have cleaned up your provided text list into a structured array.
    const RAW_DATA = [
        { num: "00", let: "OO", sent: "Ozzy Osbourne screams heavy metal" },
        { num: "01", let: "OA", sent: "Neo (The One) matrixes the bullet" },
        { num: "02", let: "OB", sent: "Orlando Bloom boards the pirate ship" },
